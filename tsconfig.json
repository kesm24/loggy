{
    "compilerOptions": {
        "lib": ["ES6"],
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "outDir": "dist/esm",
        "declarationDir": "dist/types"
    }
}
